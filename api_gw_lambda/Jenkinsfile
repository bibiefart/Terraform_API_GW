pipeline {
  options {
    buildDiscarder(logRotator(daysToKeepStr: '1', numToKeepStr: '3'))
    disableConcurrentBuilds()
    timestamps()
    timeout(time: 10, unit: 'MINUTES')
  }
  agent { label 'ec2-fleet' }
 stages {
    stage('Terraform') {
      steps {
          withCredentials([usernamePassword(credentialsId: 'aws_hub_ecr_repo', passwordVariable: 'pass', usernameVariable: 'user')]) {
              sh """
                 cat ~/.aws/config
                 cd api_gw_lambda
                 export AWS_DEFAULT_REGION=us-west-1
                 export AWS_SECRET_ACCESS_KEY=iBH7HgySB9pBWX6Yu4Pht16vdjRsGdpJocV2ryy0
                 export AWS_ACCESS_KEY_ID=AKIAQI7GRHZBX72Y72ME
                 wget https://releases.hashicorp.com/terraform/1.5.6/terraform_1.5.6_linux_amd64.zip
                 unzip terraform_1.5.6_linux_amd64.zip
                 sudo mv terraform /usr/local/bin
                 terraform init
                 terraform apply --auto-approve
                 terraform output royal_cognito_user_pool_arn > "tmp.txt"
                 terraform output royal_cognito_user_pool_endpoint >> "tmp.txt"
                 terraform output royal_cognito_user_pool_name >> "tmp.txt"
                 terraform output royal_user_pool_client_id >> "tmp.txt"
                 terraform output royal_user_pool_id >> "tmp.txt"
              """
              script
              {
                 royal_cognito_user_pool_arn = sh(returnStdout: true, script: "cat tmp.txt | grep royal_cognito_user_pool_arn").trim()
                 royal_cognito_user_pool_endpoint = sh(returnStdout: true, script: "cat tmp.txt | grep royal_cognito_user_pool_endpoint").trim()
                 royal_cognito_user_pool_name = sh(returnStdout: true, script: "cat tmp.txt | grep royal_cognito_user_pool_name").trim()
                 royal_user_pool_client_id = sh(returnStdout: true, script: "cat tmp.txt | grep royal_user_pool_client_id").trim()
                 royal_user_pool_id = sh(returnStdout: true, script: "cat tmp.txt | grep royal_user_pool_id").trim()
              }
              sh """
                 echo "royal_cognito_user_pool_arn: ${royal_cognito_user_pool_arn}"
                 echo "royal_cognito_user_pool_endpoint: ${royal_cognito_user_pool_endpoint}"
                 echo "royal_cognito_user_pool_name: ${royal_cognito_user_pool_name}"
                 echo "royal_user_pool_client_id: ${royal_user_pool_client_id}"
                 echo "royal_user_pool_id: ${royal_user_pool_id}"
                 sleep 60
              """




          }//withCredentials
      }//steps
    }//stage
  }//stages
post {
        always {
                  sh """
                    cd api_gw_lambda
                    terraform destroy -auto-approve

                  """
        }
  }
}